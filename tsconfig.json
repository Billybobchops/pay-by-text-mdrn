{
    "extends": "@modern-js/tsconfig/base",
    "compilerOptions": {
        "declaration": false,
        "jsx": "preserve",
        "baseUrl": "./",
        "paths": {
            "@/*": ["./src/*"],
            "@shared/*": ["./shared/*"],
            "@components/*": ["./src/components/*"],
            "@styles/*": ["./src/styles/*"],
            "*": ["./@mf-types/*"]
        }
    },
    "include": ["src", "shared", "config", "modern.config.ts"],
    "exclude": ["**/node_modules"]
}
